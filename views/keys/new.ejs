
<section class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-semibold mb-4">Create API Key</h1>
    <form action="/keys" method="POST" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700">Owner (optional)</label>
            <input name="owner" type="text" placeholder="Client or user name"
                class="mt-1 block w-full rounded border-gray-200 shadow-sm focus:ring-2 focus:ring-indigo-200 p-2" />
        </div>
        <div class="flex items-center space-x-2">
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">Create
                Key</button>
            <a href="/keys" class="text-sm text-gray-600 hover:underline">Back to list</a>
        </div>
    </form>
    <% if (typeof createdKey !=='undefined' && createdKey) { %>
        <div class="mt-6 bg-indigo-50 border border-indigo-100 p-4 rounded">
            <p class="text-sm text-gray-700">New API key (keep it safe â€” shown only once):</p>
            <div class="mt-2 flex items-center space-x-3">
                <code class="bg-white px-3 py-2 rounded text-sm font-mono"><%= createdKey %></code>
                <button class="px-3 py-1 border rounded text-sm"
                    onclick="copyToClipboard('<%= createdKey %>', this)">Copy</button>
            </div>
            <p class="mt-2 text-xs text-gray-500">Tip: store this key in a safe vault. You won't be able to see it
                again.</p>
        </div>
        <% } %>
</section>